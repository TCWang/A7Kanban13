value":100},"依據 ",{"type":33,"tag":102,"props":103,"children":105},"a",{"href":104},"https://topick.hket.com/article/1413225/%E6%95%99%E4%BD%A0%E8%B2%B7%E9%9D%9A%E5%BA%8A%E5%96%AE%E3%80%803000%E9%87%9D%E6%9C%AA%E5%BF%85%E6%9C%80%E9%A0%82%E7%B4%9A%EF%BC%81",[106],{"type":38,"value":107},"Topick 教你買靚床單",{"type":38,"value":109},":",{"type":33,"tag":80,"props":111,"children":112},{},[],{"type":38,"value":114},"\n床單的針數: 一英吋的針紗有 200 針已叫出色，300 至 400 針的更是上上品，至於坊間一般超過 500 甚至過千針的，其計算方式都不合理，質量未必有想像中好，所以不宜選購。",{"type":33,"tag":46,"props":116,"children":117},{},[118],{"type":38,"value":119},"紗的粗幼: 以支數計算，紗支數愈高，條數越多，表示愈精密、觸感越柔細，當然使用起來就愈舒服，品質愈好，通常 40 支已屬不俗（Fine），60 支則列作上品，80 支已經是極精品。",{"type":33,"tag":46,"props":121,"children":122},{},[123,128],{"type":33,"tag":74,"props":124,"children":125},{},[126],{"type":38,"value":127},"床單的物料",{"type":38,"value":129},"：",{"type":33,"tag":131,"props":132,"children":133},"ul",{},[134,140,145,150],{"type":33,"tag":135,"props":136,"children":137},"li",{},[138],{"type":38,"value":139},"棉：勝在天然，易清洗，天然含水量為 6 至 7%，不過物料製作過程中會使用大量殺蟲水及肥料，被批評不夠環保。",{"type":33,"tag":135,"props":141,"children":142},{},[143],{"type":38,"value":144},"滌綸：即聚酯纖維（Polyester）的其中一個重要品種，最為耐用，但因為含水量為零，接觸人體時容易令皮膚感到不適，因此較多與其他物料混合使用。",{"type":33,"tag":135,"props":146,"children":147},{},[148],{"type":38,"value":149},"絲綢：最滑最細軟，含水量亦較高，達 11%，日常使用時亦非常容易「走紗」，製作過程亦不人道，因而被環保組織批評。",{"type":33,"tag":135,"props":151,"children":152},{},[153],{"type":38,"value":154},"天絲：近年新興的物料，在歐洲製作，主要原材料為木材，不但滑比絲綢，而且含水量高達 13%，使用時非常舒適。由於製作時砍伐數量有限制，相對其他材質而言比較環保，缺點是較硬較挺身。",{"type":33,"tag":46,"props":156,"children":157},{},[158,163],{"type":33,"tag":74,"props":159,"children":160},{},[161],{"type":38,"value":162},"清潔方式",{"type":38,"value":109},{"type":33,"tag":131,"props":165,"children":166},{},[167,172,177,182],{"type":33,"tag":135,"props":168,"children":169},{},[170],{"type":38,"value":171},"棉：手洗機洗均可",{"type":33,"tag":135,"props":173,"children":174},{},[175],{"type":38,"value":176},"滌綸：手洗機洗均可",{"type":33,"tag":135,"pr